<Configuration>
  <Adapter name="Adapter config 2" description="Stop adapter 04 to emulate a failing backend system, select this adapter (01) at Test a PipeLine and send one or more random messages to emulate an RR sending system. This adapter also demonstrates the use of a message log on a sender: Click the small blue icon at the sender information of this adapter to see the messages sent by this adapter">
    <Receiver name="01 JavaReceiver">
      <JavaListener name="01 JavaListener"/>
    </Receiver>
    <Pipeline>
      <SenderPipe name="Send">
        <JdbcMessageLog slotId="${instance.name}/TestMessageLog"/>
        <IbisLocalSender javaListener="02 JavaListener"/>
      </SenderPipe>
    </Pipeline>
  </Adapter>

  <Adapter name="Adapter config 2-2" description="No desc">
    <Receiver
        name="03 MessageStoreReceiver"
        numThreads="4"
        transactionAttribute="Required"
        pollInterval="1"
    >
      <MessageStoreListener
          name="03 MessageStoreListener"
          slotId="${instance.name}/TestMessageStore"
          statusValueInProcess="I"
      />
    </Receiver>
    <Pipeline>
      <SenderPipe name="Send">
        <JdbcMessageLog slotId="${instance.name}/TestMessageLog"/>
        <IbisLocalSender javaListener="04 JavaListener"/>
      </SenderPipe>
    </Pipeline>
  </Adapter>
</Configuration>
